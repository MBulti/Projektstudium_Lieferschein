<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Lieferschein.Views.MainView"
             Title="MainView">
    <VerticalStackLayout Spacing="10">
        <Label Text="{Binding UserName}"/>
        <Button Text="Sign" Command="{Binding SignCommand}" VerticalOptions="End"/>
        <Button Text="SingOut" Command="{Binding SignoutCommand}" VerticalOptions="End"/>
    </VerticalStackLayout>
</ContentPage>